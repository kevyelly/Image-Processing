<Window x:Class="ImgProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="575" Width="800">
    <StackPanel>
        <Grid x:Name="BasicModePanel" Visibility="Visible" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="headerGrid" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="Basic Mode" FontSize="20" Margin="10" Grid.Column="0" BorderThickness="0"/>
                <Button x:Name="btnModeSwitch" Grid.Column="1" Content="Switch Mode" BorderThickness="0" Click="switchModeClick" Background="Maroon" Foreground="White" Height="30" Width="100" HorizontalAlignment="Right"/>
            </Grid>
            <Grid x:Name="ImageBoxes" Height="375" VerticalAlignment="Top" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Border BorderBrush="Maroon" BorderThickness="2">
                        <Image x:Name="LeftImage" Width="300" Height="300" Margin="10" Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="btnLoadImage" BorderThickness="0" Background="Maroon" Foreground="White" Content="Load Image" Width="120" Margin="10" Click="loadImageClick" Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Border BorderBrush="Maroon" BorderThickness="2">
                        <Image x:Name="RightImage" Width="300" Height="300" Stretch="UniformToFill" Margin="10"/>
                    </Border>
                    <Button x:Name="btnSaveImage" BorderThickness="0" Background="Maroon" Foreground="White" Content="Save Image" Width="120" Margin="10" Click="saveImageClick" Height="25"/>
                </StackPanel>
            </Grid>
            <Border BorderThickness="2" BorderBrush="Maroon" Grid.Row="2" Margin="20 20 20 20">
                <Grid x:Name="GridButtons" Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnBasicCopy" Grid.Column="0" BorderThickness="0" Background="Maroon" Foreground="White" Content="Basic Copy" Margin="10" Click="basicCopyClick"/>
                    <Button x:Name="btnGreyScale" Grid.Column="1" BorderThickness="0" Background="Maroon" Foreground="White" Content="GreyScale" Margin="10" Click=" greyScaleClick"/>
                    <Button x:Name="btnColorInversion" Grid.Column="2" BorderThickness="0" Background="Maroon" Foreground="White" Content="Color Inversion" Margin="10" Click="colorInversionClick"/>
                    <Button x:Name="btnHistogram" Grid.Column="3" BorderThickness="0" Background="Maroon" Foreground="White" Content="Histogram" Margin="10" Click="histogramClick"/>
                    <Button x:Name="btnSepia" Grid.Column="4" BorderThickness="0" Background="Maroon" Foreground="White" Content="Sepia" Margin="10" Click="sepiaClick"/>
                </Grid>
            </Border>

        </Grid>
        <Grid x:Name="SubtractModePanel" Visibility="Collapsed" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid x:Name="subtractHeaderGrid" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="Subtract Mode" FontSize="20" Margin="10" Grid.Column="0" BorderThickness="0"/>
                <Button Grid.Column="1" Content="Switch Mode" BorderThickness="0" Click="switchModeClick" Background="Maroon" Foreground="White" Height="30" Width="100" HorizontalAlignment="Right"/>
            </Grid>
            <Grid x:Name="SubtractImageBoxes" Height="275" VerticalAlignment="Top" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Border BorderBrush="Maroon" BorderThickness="2">
                        <Image x:Name="foregroundImage" Width="200" Height="200" Margin="10" Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="btnLoadForeground" BorderThickness="0" Background="Maroon" Foreground="White" Content="Load Foreground" Width="120" Margin="10" Click="loadForegroundClick" Height="25"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
                    <Border BorderBrush="Maroon" BorderThickness="2">
                        <Image x:Name="resultImage" Width="200" Height="200" Margin="10" Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="btnSaveResult" BorderThickness="0" Background="Maroon" Foreground="White" Content="Save Image" Width="120" Margin="10" Click="saveResultClick" Height="25"/>
                </StackPanel>
                <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Border BorderBrush="Maroon" BorderThickness="2">
                        <Image x:Name="backgroundImage" Width="200" Height="200" Margin="10" Stretch="UniformToFill"/>
                    </Border>
                    <Button x:Name="btnLoadBackground" BorderThickness="0" Background="Maroon" Foreground="White" Content="Load Background" Width="120" Margin="10" Click="loadBackgroundClick" Height="25"/>
                </StackPanel>
                
            </Grid>

            <Grid Height="100" VerticalAlignment="Center" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnSubtract" Grid.Column="0" BorderThickness="0" Background="Maroon" Foreground="White" Content="Subtract Images" Width="120"  Click="subtractClick" Height="35"/>
                <Button x:Name="btnClearImages" Grid.Column="1" BorderThickness="0" Background="Maroon" Foreground="White" Content="Clear Images" Width="120" Click="clearImagesClick" Height="35"/>
            </Grid>

        </Grid>
    </StackPanel>
</Window>
